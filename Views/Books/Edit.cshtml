@model BookEater.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="text-center mb-4">
                <span style="font-size: 2.5rem;">✏️</span>
                <h2 class="fw-bold" style="font-family: Georgia, serif;">Edit Book Details</h2>
                <p class="text-muted">Update the information for "@Model.Title"</p>
            </div>

            <div class="p-4 border rounded-3 bg-light shadow-sm">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                    <input type="hidden" asp-for="BookId" />

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label small text-uppercase text-muted fw-bold">Title</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Author" class="form-label small text-uppercase text-muted fw-bold">Author</label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger small"></span>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="Genre" class="form-label small text-uppercase text-muted fw-bold">Genre</label>
                            <input asp-for="Genre" class="form-control" />
                            <span asp-validation-for="Genre" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Rating" class="form-label small text-uppercase text-muted fw-bold">Rating (1-5)</label>
                            <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
                            <span asp-validation-for="Rating" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4 p-3 bg-white border rounded">
                        <label class="form-label small text-uppercase text-primary fw-bold">Current List</label>
                        <input type="text" name="ListName" class="form-control" value="@ViewData["ListName"]" placeholder="E.g., Favorites..." />
                        <div class="form-text small">Move this book to a different list.</div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-dark">Save Changes</button>
                        <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">Cancel</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
