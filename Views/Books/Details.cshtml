@model BookEater.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="mb-4">
                <a asp-action="Index" class="text-decoration-none text-muted small">&larr; Back to Library</a>
            </div>

            <div class="p-5 bg-light border rounded-3 shadow-sm">

                <div class="text-center mb-3">
                    <span style="font-size: 3rem;">📖</span>
                </div>

                <div class="text-center mb-5">
                    <h1 class="display-4 fw-bold mb-2" style="font-family: Georgia, serif;">
                        @Html.DisplayFor(model => model.Title)
                    </h1>
                    <p class="fs-4 text-muted fst-italic">
                        by @Html.DisplayFor(model => model.Author)
                    </p>
                </div>

                <hr class="my-4 text-muted" style="opacity: 0.2;">

                <div class="row text-center">
                    <div class="col-6 border-end">
                        <span class="text-uppercase small text-muted fw-bold">Genre</span>
                        <div class="fs-5 mt-1">@Html.DisplayFor(model => model.Genre)</div>
                    </div>
                    <div class="col-6">
                        <span class="text-uppercase small text-muted fw-bold">Rating</span>
                        <div class="fs-5 mt-1 text-warning">
                            @Html.DisplayFor(model => model.Rating) ★
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.BookId" class="btn btn-dark px-5 rounded-pill">
                    Edit Details
                </a>
            </div>

        </div>
    </div>
</div>